<?xml version="1.0" encoding="UTF-8"?>
<b:blog xmlns='http://www.w3.org/1999/xhtml'>

  <b:skin><![CDATA[
    :root{
      --saffron-50:#fff8f0;
      --accent:#0b60a6;
      --muted:#6b6b6b;
      --card-bg:#ffffff;
      --radius:12px;
      --max-width:1100px;
    }
    body{margin:0;font-family:Arial,Helvetica,sans-serif;background:var(--saffron-50);color:#111}
    a{color:var(--accent);text-decoration:none}
    .site-wrapper{max-width:var(--max-width);margin:24px auto;padding:0 16px}
    .layout-grid{display:grid;grid-template-columns:1fr 320px;gap:24px;margin-top:18px}
    .panel{background:var(--card-bg);padding:14px;border-radius:var(--radius);box-shadow:0 8px 20px rgba(10,15,30,0.06)}
    footer.site-footer{text-align:center;padding:18px 0;color:var(--muted);font-size:13px}
    @media(max-width:900px){.layout-grid{grid-template-columns:1fr}}
  ]]></b:skin>

  <!-- include required head content -->
  <b:include name='all-head-content'/>

  <!-- Header section (edit via Layout -> Header) -->
  <b:section id='header-section' class='site-wrapper' maxwidgets='1' showaddelement='no'>
    <b:widget id='Header1' locked='true' title='Header' type='Header'/>
  </b:section>

  <!-- Main wrapper: keep top-level structure inside b:section tags -->
  <b:section id='main-wrapper' class='site-wrapper' maxwidgets='0' showaddelement='no'>

    <!-- Blog posts area -->
    <b:section id='main-column' class='layout-grid' maxwidgets='1' showaddelement='no'>
      <b:widget id='Blog1' locked='false' title='Blog Posts' type='Blog'/>
    </b:section>

    <!-- Sidebar area (add gadgets from Layout) -->
    <b:section id='sidebar-column' class='panel' maxwidgets='10' showaddelement='yes'>
      <b:widget id='Profile1' locked='false' title='About' type='Profile'/>
    </b:section>

  </b:section>

  <!-- Footer -->
  <b:section id='footer-section' class='site-wrapper' maxwidgets='3' showaddelement='yes'>
    <b:widget id='Attribution1' locked='true' title='Attribution' type='Attribution'/>
  </b:section>

</b:blog>
